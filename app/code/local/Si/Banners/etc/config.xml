<?xml version="1.0"?>
<config>
  <modules>
    <Si_Banners>
      <version>0.1.0</version>
    </Si_Banners>
  </modules>
  <frontend>
    <routers>
      <banners>
        <use>standard</use>
          <args>
            <module>Si_Banners</module>
            <frontName>banners</frontName>
          </args>
      </banners>
    </routers>
		<layout>
		  <updates>
			<banners>
			  <file>banners.xml</file>
			</banners>
		  </updates>
		</layout>
  </frontend>
  <global>
    <helpers>
      <banners>
        <class>Si_Banners_Helper</class>
      </banners>
    </helpers>
	<blocks>
	  <banners>
		<class>Si_Banners_Block</class>
	  </banners>
	</blocks>
	<models>
	  <banners>
		<class>Si_Banners_Model</class>
		<resourceModel>banners_mysql4</resourceModel>
	  </banners>
	  <banners_mysql4>
		<class>Si_Banners_Model_Mysql4</class>
		<entities>		  
			  <banners>
				<table>banners</table>
			  </banners>
        </entities>
	  </banners_mysql4>
	</models>
	<resources>
	  <banners_setup>
		<setup>
		  <module>Si_Banners</module>
		</setup>
		<connection>
		  <use>core_setup</use>
		</connection>
	  </banners_setup>
	  <banners_write>
		<connection>
		  <use>core_write</use>
		</connection>
	  </banners_write>
	  <banners_read>
		<connection>
		  <use>core_read</use>
		</connection>
	  </banners_read>
	</resources>
  </global>
  <admin>
	<routers>
	  <banners>
	    <use>admin</use>
		<args>
		  <module>Si_Banners</module>
		  <frontName>admin_banners</frontName>
		</args>
	  </banners>
	</routers>
  </admin>
  <adminhtml>
	<menu>
	  <banners module="banners">
		<title>Tools</title>
		<sort_order>100</sort_order>
		<children>
		  <banners module="banners">
		    <title>Manage Banners</title>
			<sort_order>0</sort_order>
			<action>admin_banners/adminhtml_banners</action>
		  </banners>
		</children>
	  </banners>
	</menu>
	<acl>
	  <resources>
		<all>
		  <title>Allow Everything</title>
		</all>
		<admin>
		  <children>
			<banners translate="title" module="banners">
			  <title>Banners</title>
			  <sort_order>1000</sort_order>
			  <children>
		  <banners translate="title">
			<title>Manage Banners</title>
			<sort_order>0</sort_order>
		  </banners>
			  </children>
			</banners>
		  </children>
		</admin>
	  </resources>
	</acl>
	<layout>
	  <updates>
		<banners>
		  <file>banners.xml</file>
		</banners>
	  </updates>
	</layout>
  </adminhtml>
</config> 